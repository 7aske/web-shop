<link rel="stylesheet" href="../css/browse.css">
<div class="container">
    <div class="row mt-3">
        <div class="col-12" id="queryBar">
            <form action="#" action="get" id="queryForm">
                <div class="row">
                    <div class="input-group col-md-6 col-sm-12">
                        <div class="input-group-prepend">
                            <label class="input-group-text" style="width:6em;" for="category">Category</label>
                        </div>
                        <select class="custom-select" id="category">
                            {{#each payload.categories}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="input-group col-md-6 col-sm-12">
                        <div class="input-group-prepend">
                            <label class="input-group-text" style="width:6em;" for="query">Search</label>
                        </div>
                        <input class="form-control" type="text" name="query" placeholder="Search">
                    </div>
                </div>
            </form>
        </div>
        <div class="col-12 mt-2">
            <div id="msgOut">

            </div>
        </div>
    </div>
    <div class="row mt-4" id="productList">

    </div>
</div>
<script src="../js/browse.js"></script>
