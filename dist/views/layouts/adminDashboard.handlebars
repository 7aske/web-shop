<link rel="stylesheet" href="../css/tabs.css">

<input id="tab1" type="radio" name="tabs" checked>
<label for="tab1">Products</label>

<input id="tab2" type="radio" name="tabs">
<label for="tab2">Users</label>

<section id="content1">
    <div class="container">
        {{#each payload.errors}}
        <div class="alert alert-danger">{{this}}</div>
        {{/each}}
    </div>
    <div class="row p-3">
        <div class="col-md-6">
            <form method="post" action="/products" id="productForm">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:5em;" id="pid">Prod. ID</span>
                    </div>
                    <input type="text" name="pid" class="form-control" aria-label="Sizing example input"
                        aria-describedby="pid" readonly>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:5em;" id="brand">Brand</span>
                    </div>
                    <input type="text" name="brand" class="form-control" aria-label="Sizing example input"
                        aria-describedby="brand">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:5em;" id="name">Name</span>
                    </div>
                    <input type="text" name="name" class="form-control" aria-label="Sizing example input"
                        aria-describedby="name">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:5em;" id="quantity">Qnty.</span>
                    </div>
                    <input type="text" name="quantity" class="form-control" aria-label="Sizing example input"
                        aria-describedby="quantity">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:5em;" id="price">Price</span>
                    </div>
                    <input type="text" name="price" class="form-control" aria-label="Sizing example input"
                        aria-describedby="price">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
                <button type="reset" class="btn btn-danger">Cancel</button>
            </form>
        </div>
        <div class="col-md-6">
            <ul class="list-group" id="productList">
                {{#each payload.products}}
                <li class="list-group-item list-group-item-action" style="cursor:pointer" data-pid="{{this.pid}}"
                    data-name="{{this.name}}" data-brand="{{this.brand}}" data-quantity="{{this.quantity}}" data-price="{{this.price}}"><span
                        class=" font-weight-bold">{{this.brand}}</span>
                    -
                    {{this.name}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</section>
<section id="content2">
    <dir class="row p-3">
        <div class="col-md-6">
            <form method="post" action="/users" id="userForm">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:6em;" id="pid">User ID</span>
                    </div>
                    <input type="text" name="uid" class="form-control" aria-label="Sizing example input"
                        aria-describedby="uid" readonly>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:6em;" id="fristName">First Name</span>
                    </div>
                    <input type="text" name="firstName" class="form-control" aria-label="Sizing example input"
                        aria-describedby="firstName">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:6em;" id="lastName">Last Name</span>
                    </div>
                    <input type="text" name="lastName" class="form-control" aria-label="Sizing example input"
                        aria-describedby="lastName">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:6em;" id="username">Username</span>
                    </div>
                    <input type="text" name="username" class="form-control" aria-label="Sizing example input"
                        aria-describedby="username">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:6em;" id="email">E-Mail</span>
                    </div>
                    <input type="text" name="email" class="form-control" aria-label="Sizing example input"
                        aria-describedby="email">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
                <button type="reset" class="btn btn-danger">Cancel</button>
            </form>
        </div>
        <div class="col-md-6">
            <ul class="list-group" id="userList">
                {{#each payload.users}}
                <li class="list-group-item list-group-item-action" style="cursor:pointer" data-uid="{{this.uid}}"
                    data-username="{{this.username}}" data-email="{{this.email}}" data-firstName="{{this.firstName}}"
                    data-lastName="{{this.lastName}}"><span class=" font-weight-bold">{{this.username}}</span>
                    -
                    {{this.firstName}} {{this.lastName}} - {{this.email}} - {{this.uid}}</li>
                {{/each}}
            </ul>
        </div>
    </dir>


</section>
<script src="../js/adminDashboard.js"></script>
